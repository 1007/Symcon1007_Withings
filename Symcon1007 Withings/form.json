{
  "elements":
  [

    { "type": "Label"             , "label":  "####### Withings V 5.0 (50019)#######" },
    
    { "type": "Button"            , "caption": "Dokumentation", "width": "250px" , "onClick": "echo 'https://github.com/1007/Symcon1007_Withings/tree/master';" },
    
    { "type": "CheckBox"          , "name" :  "Modulaktiv",  "caption": "Modul aktiv" },
 

    { "type": "ExpansionPanel", "caption": "Datenauswahl",
      "items": 	
        [	
          

          { "type": "CheckBox"          , "name" :  "CheckBoxBodyGoals",   "caption": "Ziele" },

          { "type": "CheckBox"          , "name" :  "CheckBoxMeas",   "caption": "Gewichtswerte / Temperaturen / Blutdruckwerte" },
    
          { "type": "CheckBox"          , "name" :  "CheckBoxSleepSummary",  "caption": "Schlafsensorwerte" },

          { "type": "CheckBox"          , "name" :  "CheckBoxActivity",  "caption": "Aktivitaetswerte" } 

          
        ]
      },

      
  
  
    
    { "type": "ExpansionPanel", "caption": "Benachrichtigungen",
      "items": 	
        [	
          { "type": "CheckBox"      , "name"  : "Notifyaktiv" , "caption": "Benachrichtigungen aktivieren" },
          { "type": "SelectScript"  , "name"  : "Notify1"     , "caption": "[1]Script fuer Gewicht (user.metrics)" },
          { "type": "SelectScript"  , "name"  : "Notify2"     , "caption": "[2]Script fuer Temperatur (user.metrics)" },
          { "type": "SelectScript"  , "name"  : "Notify4"     , "caption": "[4]Script fuer Blutdruck (user.metrics)" },
          { "type": "SelectScript"  , "name"  : "Notify16"    , "caption": "[16]Script fuer Aktivitaeten (users.activity)" },
          { "type": "SelectScript"  , "name"  : "Notify44"    , "caption": "[44]Script fuer Schlafsensor (users.activity)" },
          { "type": "SelectScript"  , "name"  : "Notify46"    , "caption": "[46]Script fuer User Aktion (user.info)" },
          { "type": "SelectScript"  , "name"  : "Notify50"    , "caption": "[50]Script fuer Schlafsensor (user.sleepevents)" },
          { "type": "SelectScript"  , "name"  : "Notify51"    , "caption": "[51]Script fuer Schlafsensor (user.sleepevents)" },
          { "type": "SelectScript"  , "name"  : "Notify52"    , "caption": "[52]Script fuer Schlafsensor (user.sleepevents)" },
          { "type": "SelectScript"  , "name"  : "Notify54"    , "caption": "[54]Script fuer New ECG Data (user.metrics)" },
          { "type": "SelectScript"  , "name"  : "Notify55"    , "caption": "[55]Script fuer New ECG measure failed event (user.metrics)" },
          { "type": "SelectScript"  , "name"  : "NotifyAlarm" , "caption": "Script Alarm ( Offline )" },
         
          { "type": "Label", "caption": "Manuelle Eingabe einer Callback Adresse fuer Benachrichtigungen" },
          { "type": "ValidationTextBox", "name": "CallbackURL", "caption": "CallbackURL" }
        ]
    },

    { "type": "ExpansionPanel", "caption": "Zeitraum fuer Update Data",
      "items":
        [
          { "type": "SelectDateTime", "name": "UpdateDateTimeStart", "caption": "Startzeitpunkt" },
          { "type": "SelectDateTime", "name": "UpdateDateTimeEnde", "caption": "Endezeitpunkt" },
          { "type": "Button", "label": "Update Zeitraum Data",                 "width": "250px" ,"onClick": "WIT_UpdateZeitraum($id);" }
        ]
    },

    { "type": "ExpansionPanel", "caption": "Persoenliche Einstellungen",
      "items": 	
        [	  
          { "type": "ValidationTextBox"          , "name" :  "SetUserName", "caption": "Name" },
          { "type": "SelectDate", "name": "SetUserBirthday", "caption": "Geburtsdatum" },
          { "type": "Select", "name": "SetUserGender", "caption": "Geschlecht",
            "options": [
                { "caption": "maennlich", "value": 0 },
                { "caption": "weiblich", "value": 1 }
              
            ]
          },
          { "type": "NumberSpinner", "name": "SetUserHeight", "caption": "Koerpergroesse" }
        ]
    },

    { "type": "ExpansionPanel", "caption": "Einstellungen",
      "items": 	
        [	  
          { "type": "NumberSpinner", "name": "Intervall", "caption": "Update Intervall" },
          { "type": "CheckBox"          , "name" :  "ExtDebug", "caption": "Erweitertes Debug" } ,
          { "type": "CheckBox"          , "name" :  "Logging", "caption": "Logging (../logs/Withings)" } 
        ]
    }



  ],
  
  "actions":
  [  
    { "type": "Button", "label": "Authentifizierung anfordern", "width": "250px" ,"onClick": "echo WIT_Authentifizierung($id);" },
    { "type": "Button", "label": "Update Data",                 "width": "250px" ,"onClick": "WIT_Update($id);" },
    { "type": "Button", "label": "Refresh Tokens",              "width": "250px" ,"onClick": "WIT_RefreshTokens($id);" },
    { "type": "Button", "label": "Alarmscript testen",          "width": "250px" ,"onClick": "WIT_RunAlarmScript($id,$id,'Test');" }

  ],


  "status":
    [
        { "code": 101, "icon": "active", "caption": "Withings wird erstellt..." },
        { "code": 102, "icon": "active", "caption": "Withings Instanz ist aktiv" },
        { "code": 104, "icon": "active", "caption": "Withings Instanz ist inaktiv" },
        { "code": 202, "icon": "error",  "caption": "Userdaten falsch" },
        { "code": 203, "icon": "error",  "caption": "AuthentificationCode falsch" },
        { "code": 204, "icon": "error",  "caption": "Token falsch oder nicht vorhanden" },
        { "code": 293, "icon": "error",  "caption": "Callback URL nicht akzeptiert" }
        
        
    ]



}